---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="page-title light-background">
  <div class="container">
    <h1>{title}</h1>
    <nav class="breadcrumbs">
      <ol>
        <li><a href="./">Home</a></li>
        <li class="current">{title}</li>
      </ol>
    </nav>
  </div>
</div>
