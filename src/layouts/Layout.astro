---
import Header from "@components/Header.astro";
import Head from "@components/Head.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
  menuActived?: string;
}

const { title,menuActived } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={title} />
  </head>

  <body class="index-page">
    <Header menuActived={menuActived}/>

    <main class="main">
      <slot />
    </main>

    <Footer />
  </body>
</html>
